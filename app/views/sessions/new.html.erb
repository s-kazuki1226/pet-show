<div class="py-4 border rounded border-4 border-info">
    <div class="mb-4 text-center">
      <h1>ログイン</h1>
    </div>
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <%= form_with(url: login_path, scope: :session) do |f| %>
        
          <div class="mb-3">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
    
          <div class="mb-3">
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
    
          <%= f.submit 'ログイン', class: 'btn btn-primary w-100' %>
        <% end %>
      </div>
    </div>
</div>    

<div class="my-3 border rounded border-4 border-info">
    <p class="my-2 text-center">アカウントをお持ちでないですか？ <%= link_to '登録する', signup_path %></p>
</div>    
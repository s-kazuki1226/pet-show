<div class="py-4 border rounded border-4 border-info">  
  <div class="mb-4 text-center">
    <h3>ペットの写真投稿ページ</h3>
  </div>

  <%= form_for (@post) do |f| %>
    <div class="row">
      <aside class="col-sm-10 offset-sm-1">
        <%= render 'layouts/error_messages', model: f.object %>
        <%= f.label :comment, 'コメント' %>
        <div class="mb-3">
          <%= f.text_area :comment, class: 'form-control', rows: 4 %>
        </div>
        
        <div>
          <%= f.label :image, "写真" %>
        </div>
        <div class="mb-3">
          <%= f.file_field :image, class: "image"%>
        </div>  
          
        <div class="col-sm-1 offset-sm-11">
          <%= f.submit '投稿！', class: 'btn btn-primary'%>
        </div>  
      </aside>
    </div>  
  <% end %>
</div>  
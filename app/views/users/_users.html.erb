<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="mb-3 d-flex justify-content-center">
        <div class="rounded-circle">
          <%= image_tag user.image.url, class: 'rounded-circle mt-3', id: 'preview', size: '64x64' %>
        </div>
        <div class="m-3">
          <%= user.name %>
        </div>  
        <div class="m-3">  
          <p>フォローボタン</p>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
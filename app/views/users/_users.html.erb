<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="mb-3 d-flex justify-content-center">
        <div class="rounded-circle">
          <%= image_tag user.image.url, class: 'rounded-circle mt-3', id: 'preview', size: '64x64' %>
        </div>
        <div class="p-4">
          <%= link_to user.name, user_path(user), class: "text-decoration-none" %>
        </div>  
        <div class="m-3">  
          <%= render 'relationships/follow_button', user: user %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>